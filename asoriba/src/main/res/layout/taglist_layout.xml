<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/datalist"
    android:padding="@dimen/length_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
            android:id="@+id/epcId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="6dip"
            android:singleLine="true"
            android:textSize="15sp"
            android:text="111012121212131313"
            android:textColor="@color/text131313"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dip"
                android:text="@string/read_time"
                android:textColor="@color/text131313"/>

            <TextView
                android:id="@+id/readNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dip"
                android:text="1"
                android:textColor="@color/text_color"/>
        </LinearLayout>

    </LinearLayout>



    <com.szfp.view.button.SelectButton
        android:id="@+id/bt_write"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/length_10"
        android:text="@string/write"
        android:singleLine="true"
        app:normalBackgroundColor="@color/login_normal"
        app:normalTextColor="@color/white"
        app:pressedBackgroundColor="@color/login_pass"
        app:pressedTextColor="@color/white"/>

</LinearLayout>