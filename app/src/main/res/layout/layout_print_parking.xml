<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_view"
    android:padding="@dimen/length_20">

    <TextView
        android:gravity="center"
        android:id="@+id/tv_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_s_n"
        android:drawablePadding="5dp"
        android:text="100000000000000000"/>

    <LinearLayout
        android:layout_marginTop="@dimen/length_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="2dp"
            android:id="@+id/tv_name"
            android:drawableLeft="@drawable/ic_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_font_10"
            android:textColor="@color/text131313"
            android:drawablePadding="5dp"
            android:text=" Extra"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_card_number"
            android:drawableLeft="@drawable/ic_card_number"
            android:drawablePadding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_font_10"
            android:textColor="@color/text131313"
            android:text=" 0000000000"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/length_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:drawableLeft="@drawable/ic_park"
                android:id="@+id/tv_park_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textSize="@dimen/text_font_10"
                android:textColor="@color/text131313"
                android:text=" 0.00"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_park_entry"
                android:drawableLeft="@drawable/ic_park_entry"
                android:layout_width="0dp"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_font_10"
                android:textColor="@color/text131313"
                android:text="1970:00:00 00:00:00"
                android:layout_weight="1" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_view_park"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="2dp"
                    android:id="@+id/tv_time"
                    android:drawableLeft="@drawable/ic_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/text_font_10"
                    android:textColor="@color/text131313"
                    android:text=" 00"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_park_exit"
                    android:drawableLeft="@drawable/ic_park_exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/text_font_10"
                    android:textColor="@color/text131313"
                    android:text=" 0000000000"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="2dp"
                    android:id="@+id/tv_amount"
                    android:drawableLeft="@drawable/ic_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/text_font_10"
                    android:textColor="@color/text131313"
                    android:text=" 00"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_over_time"
                    android:drawableLeft="@drawable/ic_over_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/text_font_10"
                    android:textColor="@color/text131313"
                    android:text=" 0000000000"
                    android:layout_weight="1" />
            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="2dp"
                    android:id="@+id/tv_cash_amount"
                    android:drawableLeft="@drawable/ic_cash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_font_10"
                    android:drawablePadding="5dp"
                    android:textColor="@color/text131313"
                    android:text=" 00"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_card_amount"
                    android:drawableLeft="@drawable/ic_recharge_amount"
                    android:layout_width="0dp"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_font_10"
                    android:textColor="@color/text131313"
                    android:text=" 0000000000"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="2dp"
                    android:id="@+id/tv_pay_before"
                    android:drawableLeft="@drawable/ic_pay_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/text_font_10"
                    android:textColor="@color/text131313"
                    android:text=" Extra"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_pay_after"
                    android:drawableLeft="@drawable/ic_pay_after"
                    android:layout_width="0dp"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_font_10"
                    android:textColor="@color/text131313"
                    android:text=" 0000000000"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>


</LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/category_text_color"/>
</LinearLayout>