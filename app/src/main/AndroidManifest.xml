<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.szfp.ss">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!-- 解锁屏幕 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection"
            android:label="Shutdown System Tools" />
        <activity
            android:name=".LoginAty"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection"
            android:label="@string/title_activity_login_aty"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />
        <activity
            android:name=".WelcomeAty"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddUserAty"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />
        <activity
            android:name=".AddUserCardAty"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection" />
        <activity
            android:name=".SettingAty"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ParkingFeeSettingsAty"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection" />
        <activity
            android:name=".LuRuKaActivity"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection" />
        <activity
            android:name=".RechargedActivity"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection" />
        <activity
            android:name=".RechargeAty"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection" />
        <activity
            android:name=".PurchaseTimeActivity"
            android:configChanges="mcc|mnc|orientation|screenSize|keyboard|layoutDirection" />
        <activity android:name=".DeviceListActivity"></activity>
    </application>

</manifest>